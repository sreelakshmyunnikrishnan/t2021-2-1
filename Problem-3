num=int(input("Enter a number: "))

for i in range (1,num+1):
    for j in range(1,i+1):
        if (i%2==0):      
            print(i+1-j,end=" ")         
        else: 
            print(j,end=" ")   

    print(end="\n")

for i in range(num+1,1,-1):
    for j in range(1,i-1):
        if (i%2==0):           
            print(i-1-j,end=" ") 
        else:
            print(j,end=" ")

    print(end="\n")

